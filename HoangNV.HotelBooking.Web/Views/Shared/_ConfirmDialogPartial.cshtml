@inject Microsoft.Extensions.Localization.IStringLocalizer<HoangNV.HotelBooking.Web.Localization.SharedResource> localizer
@{
    Layout = null;
}
<div class="ui tiny modal" id="confirm-dialog">
    <div class="header">
        <i id="icon" aria-hidden="true"></i> <span id="header-content"></span>
    </div>
    <div class="scrolling content" id="message"></div>
    <div class="actions">
        <div class="ui small button cancel yellow" data-value="Yes">@localizer["Yes"]</div>
        <div class="ui small button cancel yellow" data-value="No">@localizer["Cancel"]</div>
    </div>
</div>
