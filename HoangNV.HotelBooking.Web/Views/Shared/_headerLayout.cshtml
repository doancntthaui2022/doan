@inject Microsoft.Extensions.Localization.IStringLocalizer<HoangNV.HotelBooking.Web.Localization.SharedResource> localizer
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{ var userName = HttpContextAccessor.HttpContext.Session.GetString("user_name_client");
    var userFullName = HttpContextAccessor.HttpContext.Session.GetString("user_full_name_client"); }


<!-- header inner -->
<div class="header">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                <div class="full">
                    <div class="center-desk">
                        <div class="logo">
                            <a href="/Home"><img src="~/img/logo3.png" alt="#" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                <nav class="navigation navbar navbar-expand-md navbar-dark ">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarsExample04">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home#about">Thông tin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">Liên hệ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Booking">Đặt phòng</a>
                            </li>
                        </ul>
                        @if (userName != null)
                        {
                            <div class="dropdown">
                                    <a class="nav-item item-user" href="#" id="dropdownMenuButton1" data-bs-toggle="dropdown">Xin chào @userFullName</a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" href="~/Account/Update">Thông tin cá nhân</a></li>
                                        <li><a class="dropdown-item" href="~/Account/UpdatePassword">Đổi mật khẩu</a></li>
                                        <li><a class="dropdown-item" href="~/Account/ListBooking">Danh sách đơn đặt phòng</a></li>
                                    </ul>
                            </div>
                            <form action="~/Account/Logout" method="post">
                                <div id="btn_logout" class="sign_btn"><a>Đăng xuất</a></div>
                                <button id="btn_logout_2" type="submit" style="display:none"></button>
                            </form>
                            }
                        else
                        {
            <div class="sign_btn"><a href="~/Account/Login">Đăng nhập</a></div>
                            <div class="sign_btn"><a href="~/Account/Register">Đăng ký</a></div>}
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>